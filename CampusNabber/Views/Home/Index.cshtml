@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <div class="jumbotron">
            <img src="~/Content/images/Transparent_logo_black.png" alt="" height="600" width="600">
            <!--<h1>Campus Nabber</h1>
        <p class="lead">For Students by Students</p>

        <!--Added a conditional statement so that users that are already logged in aren't prompted to register or log in. - ahenry -->
            @if (User.Identity.Name == "")
            {
                <b><a href="/Account/Register/" class="btn btn-primary btn-lg">Register Now! &raquo;</a>             <a href="/Account/Login/" class="btn btn-primary btn-lg">Login! &raquo;</a></b>
            }
        </div>
    </div>

    
    <div class="col-md-2 addSpace">
        <div class="col-md-2">
            <div class="col-md-2">

                <div id="sidebar" class="col-md-3 hidden-xs hidden-sm"> 
                <!--Big Banner on side-->
                    <div class="banner">
                        <img src="~/Content/banners/160x600.png">
                    </div>
                </div>  <!-- sidebar -->

                <div id="sidebar_mobile_med" class="col-xs-12 hidden-xs hidden-md hidden-lg">
                    <!--Medium banner on bottom-->
                    <img style="margin: 20px 0px">
                    <img src="~/Content/banners/728x90.png">
                </div>  <!-- sidebar_mobile_med -->

                <div id="sidebar_mobile" class="col-xs-12 hidden-sm hidden-md hidden-lg">
                    <!--Small banner on bottom-->
                    <img style="margin: 20px 0px">
                    <img src="~/Content/banners/468x60.png">
                </div>  <!-- sidebar_mobile -->

            </div> <!--col2-->
        </div> <!--col2-->
    </div> <!--col2 addSpace-->
    
</div> <!--row-->
