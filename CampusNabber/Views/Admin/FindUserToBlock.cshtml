@model CampusNabber.Models.ProfileModel
@{
    ViewBag.Title = "Block User";
}

<h2>Block a User</h2>
<h3>@Model.user.UserName</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd>@Model.user.Email</dd>
        <dt>School</dt>
        <dd>@Model.school_name</dd>
        <dt>Number of Posts</dt>
        <dd>@Model.Posts.Count</dd>
    </dl>
</div>
<h4>Are you sure you want to block this user?</h4>
<a class="btn btn-danger" href="@Url.Action("LockoutUser", "Admin", new { userEmail = Model.user.Email })" style="width:150px">Yes</a> |
@Html.ActionLink("Back to Admin Tools", "AdminTools", "Admin")