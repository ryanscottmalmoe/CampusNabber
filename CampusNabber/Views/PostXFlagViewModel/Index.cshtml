@model IEnumerable<CampusNabber.Models.PostXFlagViewModel>

@{
    ViewBag.Title = "Campus Nabber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/PostFlagTable.js")"></script>
    }

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.11/css/jquery.dataTables.css">

    

<h2>Flagged Posts</h2>
@if(Model != null && Model.Count() > 0)
{ 
    <table class="table" id="flaggedPostTable">
        <thead>
            <tr>
                <th id="title_header">
                    Post Title <span id="title_order_icon"></span>
                </th>

                <th id="date_header">
                    Date Posted <span id="date_order_icon"></span>
                </th>
                <th id="flag_header">
                    Number of Flags <span id="flag_order_icon"></span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("PostFlagDetails", "PostItems", item)">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePosted)
                    </td>
                    <td>
                        @item.Flags.Count()
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No flagged posts to display</h4>
}

